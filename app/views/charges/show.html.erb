<div class="page-header">
  <h3>Charge #<%= @charge.id %></h3>
</div>

<div class="row">
  <div class="col-md-12 mb-2">
    <dl class="dl-horizontal">
      <dt>Payer</dt>
      <dd>
        <% if @charge.payer.present? %>
          <a href="/users/<%= @charge.payer_id %>">
            <%= @charge.payer.email %>
          </a>
        <% end %>
      </dd>

      <dt>Ower</dt>
      <dd>
        <% if @charge.ower.present? %>
          <a href="/users/<%= @charge.ower_id %>">
            <%= @charge.ower.email %>
          </a>
        <% end %>
      </dd>

      <dt>Event</dt>
      <dd>
        <% if @charge.event.present? %>
          <a href="/events/<%= @charge.event_id %>">
            <%= @charge.event.event_name %>
          </a>
        <% end %>
      </dd>

      <dt>Amount</dt>
      <dd><%= @charge.amount %></dd>

    </dl>

    <div class="btn-group btn-group-justified">
      <a href="/charges" class="btn btn-primary">
        Back
      </a>
      <% if current_user == @charge.payer %>
        <a href="/charges/<%= @charge.id %>/edit" class="btn btn-warning">
          Edit
        </a>
        <a href="/delete_charge/<%= @charge.id %>" class="btn btn-danger" rel="nofollow">
          Delete
        </a>
      <% end %>
    </div>
  </div>
</div>
