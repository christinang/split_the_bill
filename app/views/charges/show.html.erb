<div class="page-header">
  <h3>Charge #<%= @charge.id %></h3>
</div>

<div class="row">
  <div class="col-md-12 mb-2">
    <dl class="dl-horizontal">
      <dt>Payer</dt>
      <dd><%= @charge.payer_id %></dd>

      <dt>Ower</dt>
      <dd><%= @charge.ower_id %></dd>

      <dt>Event</dt>
      <dd><%= @charge.event_id %></dd>

      <dt>Amount</dt>
      <dd><%= @charge.amount %></dd>

    </dl>

    <div class="btn-group btn-group-justified">
      <a href="/charges" class="btn btn-primary">
        Back
      </a>
      <a href="/charges/<%= @charge.id %>/edit" class="btn btn-warning">
        Edit
      </a>
      <a href="/delete_charge/<%= @charge.id %>" class="btn btn-danger" rel="nofollow">
        Delete
      </a>
    </div>
  </div>
</div>
