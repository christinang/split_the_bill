<div class="page-header">
  <h1>
    Charges
    <a href="/charges/new" class="btn btn-lg btn-success">New Charge</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Payer</th>
        <th>Ower</th>
        <th>Event</th>
        <th>Amount</th>
        <th>Actions</th>
      </tr>

      <% @charges.each do |charge| %>
      <tr>
        <td><%= charge.payer_id %></td>
        <td><%= charge.ower_id %></td>
        <td><%= charge.event_id %></td>
        <td><%= charge.amount %></td>
        <td>
          <a href="/charges/<%= charge.id %>" class="btn btn-primary">Show</a>
          <a href="/charges/<%= charge.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_charge/<%= charge.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
