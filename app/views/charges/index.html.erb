<div class="page-header">
  <h1>
    Charges
    <a href="/charges/new" class="btn btn-lg btn-success">New Charge</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Payer</th>
        <th>Ower</th>
        <th>Event</th>
        <th>Amount</th>
        <th>Actions</th>
      </tr>

      <% @charges.each do |charge| %>
      <tr>
        <td>
          <% if charge.payer.present? %>
            <a href="/users/<%= charge.payer.id %>">
              <%= charge.payer.email %>
            </a>
          <% end %>
        </td>
        <td>
          <% if charge.ower.present? %>
            <a href="/users/<%= charge.ower.id %>">
              <%= charge.ower.email %>
            </a>
          <% end %>
        </td>
        <td>
          <% if charge.event.present? %>
            <a href="/events/<%= charge.event.id %>">
              <%= charge.event.event_name %>
            </a>
          <% end %>
        </td>
        <td><%= charge.amount %></td>
        <td>
          <a href="/charges/<%= charge.id %>" class="btn btn-primary">Show</a>
          
          <% if current_user == charge.payer %>
            <a href="/charges/<%= charge.id %>/edit" class="btn btn-warning">Edit</a>
            <a href="/delete_charge/<%= charge.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
          <% end %>
        </td>
      </tr>
      <% end %>
    </table>
    <%= paginate @charges, theme: 'twitter-bootstrap-4' %>
  </div>
</div>
